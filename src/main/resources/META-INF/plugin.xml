<idea-plugin>
    <id>com.example.ideavim_windows_switch</id>
    <name>IdeaVimWindowsSwitch</name>
    <version>0.0.2</version>
    <vendor email="statiolake@gmail.com">statiolake</vendor>

    <description>
        <![CDATA[
        <p>Auto-switch ime input mode in ideavim</p>
        ]]>
    </description>

    <change-notes>
        <![CDATA[
        0.0.2<br />
        support restoring last status. <br />
        use native dll instead of setime executable for speed. <br />
        <br />
        0.0.1<br />
        initial implementation.
        ]]>
    </change-notes>

    <idea-version since-build="143" />
    <depends>com.intellij.modules.lang</depends>
    <depends>IdeaVIM</depends>
    <extensions defaultExtensionNs="IdeaVIM">
        <vimExtension implementation="com.example.ideavim_windows_switch.Restore" />
    </extensions>
</idea-plugin>
